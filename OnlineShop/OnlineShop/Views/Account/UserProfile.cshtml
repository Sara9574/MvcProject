@model OnlineShop.ViewModels.UserProfileResponseViewModel

@{
    ViewBag.Title = "UserProfile";
    Layout = "/views/shared/SharedLayout.cshtml";
}
<style>
    .profile-wrapper{
        text-align: right;
        padding: 20px;
        font-family: IRANSans;
        border: 1px solid lightgrey; direction: rtl;
        margin: auto;
        display: table;
        margin:20px auto;
    }
</style>

<div style="width:100%">
    <div class="col-md-3 col-sm-6 profile-wrapper">
        <h2>پروفایل کاربر</h2>
        <img src="~/Images/user.png" style="width: 150px; height: 150px; display: block; margin: auto;" />
        <div class="row" style="margin-top:20px">
            <label class="col-6">شماره موبایل:</label>
            <label class="col-6">@Model.Mobile</label>
        </div>
        <div class="row">
            <label class="col-6">نام و نام خانوادگی:</label>
            <label class="col-6">@Model.Fullname</label>
        </div>
        <div class="row">
            <label class="col-6">ایمیل:</label>
            <label class="col-6">@Model.Email</label>
        </div>
    </div>
</div>

