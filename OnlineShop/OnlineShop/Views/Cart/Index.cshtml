        }

            #count:hover {
                cursor: default;
            }

        .btn-details {
            font-size: 11px;
            border: 1px solid #f7f7f7;
            box-shadow: 1px 1px 8px -4px grey;
            background-color: #fafafa;
            margin-bottom: 5px
        }

        #item-wrapper {
            box-shadow: 2px 6px 20px -12px grey;
            border: 1px solid #f7f7f7;
            width: 100%;
            margin: 10px 70px;
            float: right;
            height: 150px;
            text-align: center;
            border-radius: 10px;
            background-color: white;
        }

            #item-wrapper:hover {
                background-color: #f7f7f7
            }

        #items {
            float: right;
            width: 55%;
            display: inline-block;
            font-family: IRANSans;
        }

        .factor {
            float: left;
            width: 25%;
            height: 60%;
            background-color: white;
            margin: 10px 70px;
            box-shadow: 2px 6px 20px -12px grey;
            border: 1px solid #f7f7f7;
            border-radius: 10px;
            position: fixed
        }

        .factor-title {
            text-align: center;
            font-size: 16px;
            display: block;
            margin: 20px;
        }

        #submit-btn {
            margin-left: auto;
            margin-right: auto;
            display: block;
            background-color: rgb(255, 4, 73);
            color: white;
            box-shadow: 2px 6px 20px -12px grey;
            border: 1px solid rgb(255, 4, 73);
