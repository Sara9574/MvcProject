<body style="background-color:#f7f7f7;font-family:IRANSans">



    <div id="items">
        @foreach (var item in Model)
        {

        <div id="item-wrapper">
            <img src=@item.ImageLink style="width:100px;height:100px; float:right;margin:20px 40px" />
            <div style="float:right;margin:20px;width:auto;text-align:right">
                <div style="font-weight:600;font-size:15px">@item.Title</div>
                <div> رنگ: @item.Color</div>
                <div> M :سایز</div>
            </div>


            <div style="width:auto;margin:30px;float:left">
                <i class="fa fa-trash-o" title="حذف" style="margin-right:20px;font-size:20px;color:#3c3c3c;"></i>
                    <button class="btn remove-btn" value="@item.Id">-</button>
                    <span id="count">@item.Count</span>
                    <button class="btn add-btn" value="@item.Id">+</button>
                <div style="font-size:15px; margin-top:40px; font-family:IRANSansFaNum;text-align:right"> <label style="font-size:13px">تومان</label> @item.EachPrice </div>
            </div>
            

        </div>
        }
    </div>
    <div class="factor">
        <span class="factor-title">اطلاعات فاکتور</span>
        <hr />
        <button id="submit-btn">ثبت و پرداخت فاکتور</button>
    </div>

