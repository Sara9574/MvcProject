@model OnlineShop.ViewModels.ItemViewModel

@{
    Layout = "/views/shared/SharedLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        div.nav {
            display: flex;
            justify-content: flex-end;
        }

        ol.navList {
            flex-direction: row-reverse;
            list-style-type: none;
            font-family: IRANSans;
            display: flex;
        }

        ol > li:hover a {
            background: white;
            text-decoration: none;
        }

        ol > li > a {
            color: grey;
        }

        .sign::before {
            content: " < ";
            white-space: pre;
        }

        .sign2::before {
            content: " | ";
            white-space: pre;
        }

        .fa {
            font-size: 25px;
        }

        .checked {
            color: orange;
        }

        .add-btn {
            padding: 1px 7px;
            border: 1px solid #f7f7f7;
            box-shadow: 3px 3px 15px -6px grey;
            background-color: #fafafa;
        }

            .add-btn:hover {
                background-color: #cfffcd !important;
            }

        .remove-btn {
            padding: 1px 9px;
            border: 1px solid #f7f7f7;
            box-shadow: 3px 3px 15px -6px grey;
            background-color: #fafafa
        }

            .remove-btn:hover {
                background-color: #ffcdcd !important;
            }

        #count {
            background-color: #e5e5e5;
            padding: 9px;
            border-radius: 3px;
            box-shadow: 1px 3px 15px -6px grey;
            font-size: 13px;
        }

            #count:hover {
                cursor: default;
            }

        .submit {
            color: rgba(221, 25, 79, 0.92);
            padding: 5px;
            width: 50%;
            border-radius: 5px;
            font-family: IRANSans;
            background-color: #fafafa;
            border: 1px solid #f7f7f7;
            box-shadow: 3px 3px 8px -4px grey;
        }

            .submit:hover {
                background-color: rgba(221, 25, 79, 0.92);
                color: white;
                border-radius: 5px;
                border: 1px solid #f7f7f7;
                box-shadow: 1px 1px 8px -4px grey;
            }

        #btn-row {
            display: flex;
            justify-content: space-around;
            align-self: stretch;
            margin:13px 0;
        }

        .container {
            margin-top: 30px;
            font-family: IRANSans;
        }

        .details {
            display: flex;
            align-items: flex-end;
            padding:30px 0px;
            font-family: IRANSans;
            flex-wrap: nowrap;
            flex-direction: column;
            justify-content: flex-start;
        }

        .productBox {
            box-shadow: 3px 3px 30px -10px grey;
            border: 1px solid #f7f7f7;
            border-radius: 15px;
            padding: 20px 0px 20px 0px;
        }

        .important {
            font-size: x-large;
        }


        label.normal::before {
            content: " :";
            white-space: pre;
        }

        label.normal {
            color: rgb(98, 98, 98);
            font-size: large;
        }

        .value {
            display: flex;
            justify-content: flex-end;
            flex-wrap: nowrap;
            font-size: large;
        }

        #productid > label {
            font-size: x-small;
            color: rgb(139, 139, 139);
        }

        #productid {
            font-size: x-small;
            font-weight:bold;
            color: rgb(139, 139, 139);
        }

        #colors {
            direction: rtl;
            width: 100%;
        }

        .details-item {
           margin:13px 0;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>
<body style="background-color:#f7f7f7">

    <div class=" container">

    <div class="row nav">
        <ol class="navList">
            <li class="sign2" style="font-size:medium;color:grey"><a href="/home/index">بازگشت به صفحه اصلي </a> </li>
            <li class="sign" style="font-size:medium;color:grey"><a> @Html.DisplayFor(model => model.CatTitle) </a></li>
            <li class="sign" style="font-size:medium;color:grey"><a> @Html.DisplayFor(model => model.SubCatTitle) </a> </li>
            <li style="font-size:medium;color:grey"><a> @Html.DisplayFor(model => model.Title) </a></li>
        </ol>
    </div>

    <div class="row productBox">

        <div class="col-md-5 details">

            <div class="details-item">
                <h2 style="color:black">@Html.DisplayFor(model => model.Title)</h2>
            </div>
                <div class="details-item">
                    <div id="productid">@Html.DisplayFor(model => model.Id)<label class="normal">کد محصول</label> </div>
                </div>
            <div class="details-item">
                @for (int i = 0; i < 5; i++)
                {
                    <span class="fa fa-star checked"></span>
                }
            </div>
            <div class="details-item">
                <div class="value "><div dir="rtl">MANGO</div><label class="normal">برند</label></div>
            </div>
            <div class="details-item">
                <div class="value">@Html.DisplayFor(model => model.CatTitle)<label class="normal">دسته بندي</label> </div>
            </div>
            <div class="details-item"><div id="price" class="important"><label style="color: rgb(98, 98, 98); font-size: medium;">تومان</label>@Html.DisplayFor(model => model.Price)<label class="normal">قيمت</label></div></div>

            <div class="details-item">
                <div class="value">
                  <!--  <select id="colors" name="colores">
                        <option value="blue">آبي</option>
                        <option value="red">قرمز</option>
                        <option value="yellow">زرد</option>
                        <option value="white">سفيد</option>
                    </select>-->@Html.DisplayFor(model => model.Color)<label class="normal">رنگ </label>
                </div>
            </div>

            <div id="btn-row">
                <button class="submit">
                    افزودن به سبد خريد<i class="fa fa-shopping-cart" style="font-size:x-large;margin:0 20px 0 0"></i>
                </button>
                <button class="btn remove-btn" value="@Model.Id">-</button>
                <span id="count">0</span>
                <button class="btn add-btn" value="@Model.Id">+</button>
            </div>
            <div class="details-item">
                <div class="value"><div style="direction:rtl; text-align:justify">@Html.DisplayFor(model => model.Description)</div><label class="normal">جزييات</label></div>
            </div>
        </div>
        <div class="col-md-5" style="display:flex;align-items:center">

            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Html.DisplayFor(model => model.Link)" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Html.DisplayFor(model => model.Link)" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="@Html.DisplayFor(model => model.Link)" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-2 moreImages">
            <div class="row">
                @foreach (var item in Model.OtherImages)
                {
                    <a href="@item">
                        <img class="col-4 col-sm-12 d-block w-100" src="@item" />
                    </a>
                }

            </div>
        </div>
    </div>
    </div>
</body>



</html>
