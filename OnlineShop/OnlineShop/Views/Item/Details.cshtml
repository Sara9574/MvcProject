@model OnlineShop.ViewModels.ItemViewModel

@{
    Layout = "/views/shared/SharedLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        div.nav {
            display: flex;
            justify-content: flex-end;
        }

       .productHead {
            display: flex;
            align-items: flex-end;
            flex-direction: column;
            justify-content:space-around;
        }

        ol.navList {
            flex-direction: row-reverse;
            list-style-type: none;
            font-family: IRANSans;
            display: flex;
        }

        ol > li:hover a {
            background: white;
            text-decoration: none;
        }

        ol > li > a {
            color: grey;
        }

        .sign::before {
            content: " < ";
            white-space: pre;
        }

        .sign2::before {
            content: " | ";
            white-space: pre;
        }

        .fa {
            font-size: 25px;
        }

        .checked {
            color: orange;
        }

        .add-btn {
            padding: 1px 7px;
            border: 1px solid #f7f7f7;
            box-shadow: 3px 3px 15px -6px grey;
            background-color: #fafafa;
        }

            .add-btn:hover {
                background-color: #cfffcd !important;
            }

        .remove-btn {
            padding: 1px 9px;
            border: 1px solid #f7f7f7;
            box-shadow: 3px 3px 15px -6px grey;
            background-color: #fafafa;
        }

            .remove-btn:hover {
                background-color: #ffcdcd !important;
            }

        #count {
            background-color: #e5e5e5;
            padding: 9px;
            border-radius: 3px;
            box-shadow: 1px 3px 15px -6px grey;
            font-size: 13px;
        }

            #count:hover {
                cursor: default;
            }

        .submit {
            color: rgba(221, 25, 79, 0.92);
            padding: 5px;
            width: 50%;
            border-radius: 5px;
            font-family: IRANSans;
            background-color: #fafafa;
            border: 1px solid #f7f7f7;
            box-shadow: 3px 3px 8px -4px grey;
        }

            .submit:hover {
                background-color: rgba(221, 25, 79, 0.92);
                color: white;
                border-radius: 5px;
                border: 1px solid #f7f7f7;
                box-shadow: 1px 1px 8px -4px grey;
            }

        #btn-row {
            display: flex;
            justify-content: space-around;
            align-self: stretch;
            margin: 13px 0;
        }

        .container {
            margin-top: 30px;
            font-family: IRANSans;
        }

        .details {
            display: flex;
            align-items: stretch;
            padding: 30px 0px;
            font-family: IRANSans;
            flex-wrap: nowrap;
            flex-direction: column;
            justify-content: flex-start;
        }

        .productBox {
            box-shadow: 3px 3px 30px -10px grey;
            border: 1px solid #f7f7f7;
            border-radius: 15px;
            padding: 10px 0px 10px 20px;
        }

        .important {
            font-size: x-large;
        }


        label.normal::before {
            content: " :";
            white-space: pre;
        }

        label.normal {
            color: rgb(98, 98, 98);
            font-size: large;
        }

        .value {
            display: flex;
            justify-content: flex-end;
            flex-wrap: nowrap;
            font-size: large;
        }

        #productid > label {
           
        }

        #productid {
            font-size: x-small;
            font-weight: bold;
            color: rgb(139, 139, 139);
        }

        #sizes {
            direction: rtl;
            width: 100%;
        }

        .details-item {
            margin: 13px 0;
            
        }

        .product-color {
            margin-bottom: 30px;
        }

        .color-choose div {
            display: inline-block;
        }

        .color-choose > div > label > span {
            display: inline-block;
            width: 40px;
            height: 40px;
            margin: -1px 4px 0 0;
            vertical-align: middle;
            cursor: pointer;
            border-radius: 50%;
            border: 2px solid #FFFFFF;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.33);
            background-repeat: no-repeat;
            background-position: center;
            text-align: center;
            line-height: 44px;
        }

            .color-choose > div > label > span > img {
                opacity: 0;
                transition: all .3s ease;
            }

        #brown + label span {
            background-color: rgb(156, 111, 48);
        }

        #blue + label span {
            background-color: dodgerblue;
        }

        #black + label span {
            background-color: black;
        }

        input[type="radio"] {
            display: none;
        }

            input[type="radio"] + lable {
                color: #333;
                font-family: Arial, sans-serif;
                font-size: 14px;
            }

        input:checked + label span img {
            opacity: 1;
        }
        #head-row {
            
            display:flex;
            align-self:stretch;
            flex-direction:row-reverse;
            justify-content:space-between;
        }
       
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>
<body style="background-color:#f7f7f7">

    <div class=" container">

        <div class="row nav">
            <ol class="navList">
                <li class="sign2" style="font-size:medium;color:grey"><a href="/home/index">بازگشت به صفحه اصلي </a> </li>
                <li class="sign" style="font-size:medium;color:grey"><a> @Html.DisplayFor(model => model.CatTitle) </a></li>
                <li class="sign" style="font-size:medium;color:grey"><a> @Html.DisplayFor(model => model.SubCatTitle) </a> </li>
                <li style="font-size:medium;color:grey"><a> @Html.DisplayFor(model => model.Title) </a></li>
            </ol>
        </div>

        <div class="row productBox">

            <div class="col-md-5 details">

                <div class="details-item productHead">
                    <div id="head-row"><h2 style="color:black">@Html.DisplayFor(model => model.Title)</h2><i class="fa fa-share-alt fa-2x"></i> </div>
                    <div class="value "><div>MANGO</div><label>از برند </label></div>
                    
                   <!-- <div>
                        @for (int i = 0; i < 5; i++)
                        {
                            <span class="fa fa-star checked"></span>
                        }
                    </div>-->
                    <div id="productid">@Html.DisplayFor(model => model.Id)<label >کد </label></div>
                </div>

                <div class="details-item">
                    <div class="value">@Html.DisplayFor(model => model.CatTitle)<label class="normal">دسته بندي</label> </div>
                </div>
                <div class="details-item"><div id="price" class="important value"><label style="color: rgb(98, 98, 98); font-size: medium;">تومان</label>@Html.DisplayFor(model => model.Price)<label class="normal">قيمت</label></div></div>

                <div class="details-item">
                    <div class="value">
                        @Html.DisplayFor(model => model.Color)<label class="normal">رنگ </label>

                    </div>
                    <div class="color-choose value">
                        <div>
                            <input data-image="brown" type="radio" id="brown" name="color" value="red" checked>
                            <label for="red">
                                <span>
                                    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/242518/check-icn.svg" alt="Checked Icon" />
                                </span>
                            </label>
                        </div>
                        <div>
                            <input data-image="blue" type="radio" id="blue" name="color" value="blue">
                            <label for="blue">
                                <span class="sppan">
                                    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/242518/check-icn.svg" alt="Checked Icon" />
                                </span>
                            </label>
                        </div>
                        <div>
                            <input data-image="black" type="radio" id="black" name="color" value="black">
                            <label for="black">
                                <span>
                                    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/242518/check-icn.svg" alt="Checked Icon" />
                                </span>
                            </label>
                        </div>
                    </div>

                </div>
                <div class="details-item">
                    <div id="size-value" class="value">
                       <label class="normal">سایز </label>
                       
                    </div>
                    <div class="value">
                        <select id="sizes" name="size">
                            <option value="small">small</option>
                            <option value="medium">medium</option>
                            <option value="large">large</option>
                            <option value="x-large">x-large</option>
                        </select>
                    </div>
                    </div>


                <div id="btn-row" class="details-item">
                    <button class="submit">
                        افزودن به سبد خريد<i class="fa fa-shopping-cart" style="font-size:x-large;margin:0 20px 0 0"></i>
                    </button>
                    <button class="btn remove-btn" value="@Model.Id">-</button>
                    <span id="count">0</span>
                    <button class="btn add-btn" value="@Model.Id">+</button>
                </div>
                <div class="details-item">
                    <div class="value"><div style="direction:rtl;font-size:medium; text-align:justify">@Html.DisplayFor(model => model.Description)</div></div>
                </div>
            </div>
            <div class="col-md-5" style="display:flex;align-items:center">

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="@Html.DisplayFor(model => model.Link)" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="@Html.DisplayFor(model => model.Link)" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="@Html.DisplayFor(model => model.Link)" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-md-2 moreImages">
                <div class="row">
                    @foreach (var item in Model.OtherImages)
                    {
                        <a href="@item">
                            <img class="col-4 col-sm-12 d-block w-100" src="@item" />
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</body>

