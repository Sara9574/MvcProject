@model IEnumerable<OnlineShop.ViewModels.ProductViewModel>

@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/scripts/jquery-3.4.1.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>مدیریت محصولات</title>
    <style>
        th, td {
            padding: 10px;
            text-align: center
        }

        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }

            .tab button {
                background-color: inherit;
                float: right;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 14px 16px;
                transition: 0.3s;
                font-size: 17px;
            }

                .tab button:hover {
                    background-color: #ddd;
                }

                .tab button.active {
                    background-color: #ccc;
                }

        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-top: none;
        }

        h4 {
            text-align: right;
            margin: 20px 0;
            color: #1b1b1b
        }
    </style>
</head>
<body>
    <h4>مدیریت محصولات</h4>

    <div class="tab">
        <button class="tablinks" value="women">زنانه</button>
        <button class="tablinks" value="men">مردانه</button>
        <button class="tablinks" value="children">بچگانه</button>
    </div>

    <div id="women" class="tabcontent">
        <table class="table-bordered" style="direction:rtl;width:100%;margin:20px 0">
            <tr>
                <th>
                    کد محصول
                </th>
                <th>
                    تصویر
                </th>
                <th>
                    دسته بندی
                </th>
                <th>
                    قیمت
                </th>
                <th>
                    عنوان
                </th>
                <th>
                    نمایش در سایت
                </th>

            </tr>

            @foreach (var item in Model)
            {
                if (@item.Category == "زنانه")
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            <a href="@item.Link">
                                <img src="@item.Link" style="width:42px;height:65px; border-radius:2px" />
                            </a>
                        </td>
                        <td>
                            @item.Category-@item.SubCat
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.ShowOnSite
                        </td>
                    </tr>
                }
            }

        </table>
    </div>

    <div id="men" class="tabcontent">
        <table class="table-bordered" style="direction:rtl;width:100%;margin:20px 0">
