                </th>

            </tr>

            @foreach (var item in Model)
            {
                if (@item.Category == "مردانه")
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            <a href="@item.Link">
                                <img src="@item.Link" style="width:42px;height:65px; border-radius:2px" />
                            </a>
                        </td>
                        <td>
                            @item.Category-@item.SubCat
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.ShowOnSite
                        </td>
                    </tr>
                }
            }

        </table>

    </div>

    <div id="children" class="tabcontent">
        <table class="table-bordered" style="direction:rtl;width:100%;margin:20px 0">
