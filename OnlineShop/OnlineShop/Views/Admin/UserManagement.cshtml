@model IEnumerable<OnlineShop.Models.Tables.User>

@{
    Layout = "~/Views/Shared/Sidebar.cshtml";
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>مدیریت کاربران</title>
    <style>
        a {
            color: white;
        }

            a:hover {
                color: white;
                text-decoration: none
            }

        th, td {
            padding: 10px;
            text-align: center
        }

        .accept {
            background-color: #61ad65;
            padding: 2px 6px;
            border-radius: 3px;
        }

        .reject {
            background-color: #b64242;
            padding: 2px 6px;
            border-radius: 3px;
        }

        .reject, .accept:hover {
            cursor: pointer;
        }

        h4 {
            text-align: right;
            margin: 20px 0;
            color: #1b1b1b
        }
    </style>
</head>
<body>
    <h4>مدیریت کاربران</h4>
    <table class="table-bordered" style="direction:rtl;width:100%;margin:20px 0">
        <tr>
            <th>
                شماره موبایل
            </th>
            <th>
                نام کاربر
            </th>
            <th>
                آدرس ایمیل
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <span class="accept"> @Html.ActionLink("تایید", "Details", new { id = item.Id })</span> |
                    <span class="reject"> @Html.ActionLink("رد", "Details", new { id = item.Id })</span>
                </td>
            </tr>
        }

    </table>
</body>
