<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="direction:rtl">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/home/index" style="font-family:IRANSans">
                اسم سایت
                <br />
                <span style="font-size:10px">فروشگاه آنلاین پوشاک</span>
            </a>

           
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent" style="font-family:IRANSans">
                <ul class="navbar-nav ">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/index">صفحه اصلی<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            دسته‌بندی
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="text-align:right">
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/about">درباره ما</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/contact">تماس با ما</a>
                    </li>


                </ul>
                <form class="form-inline my-2 my-lg-0" style="margin-right:auto">
                    <input class="form-control mr-sm-2" type="search" placeholder="مثلا کفش" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="margin-right:20px">جستجو</button>
                </form>
            </div>
        </nav>
    </div>

    <div>
        @RenderBody()
        @*<hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
<script type="text/javascript" src="~/scripts/main.js"></script>