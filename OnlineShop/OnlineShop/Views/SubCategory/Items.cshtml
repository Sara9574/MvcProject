@model IEnumerable<OnlineShop.ViewModels.ItemViewModel>

@{
     Layout="/views/shared/SharedLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.FirstOrDefault().SubCatTitle  @Model.FirstOrDefault().CatTitle</title>
    <style>
        .lbl{
            display:block;
            font-size:12px
        }
    </style>
</head>
<body >
    <h3 style="float:right;font-family:IRANSans;margin:20px">
        @Model.FirstOrDefault().SubCatTitle  @Model.FirstOrDefault().CatTitle
    </h3>
    <div style="float:right;width:100%;display: inline-block;font-family:IRANSans">
        @foreach (var item in Model)
        {

        <div style="border:2px solid lightgrey;width:200px; margin: 10px;float: right;height:300px;text-align:center;border-radius:10px">
            <img src=@item.Link style="width:130px;height:130px" />
            <label style="font-weight:600">@item.Title</label>
            <hr />
            <label class="lbl">قیمت: @item.Price تومان</label>
            <label class="lbl">رنگ: @item.Color</label>
            <a class="btn btn-primary" href="/item/details/@item.Id" style="font-size:12px" >مشاهده</a>
        </div>

